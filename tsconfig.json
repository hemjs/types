{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "removeComments": false,
    "noLib": false,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
