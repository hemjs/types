{
  "name": "@hemjs/types",
  "version": "0.2.0",
  "description": "Shared TypeScript definitions for hemjs ecosystem",
  "author": "Augustus Kamau",
  "license": "MIT",
  "keywords": [
    "hemjs",
    "typescript",
    "types"
  ],
  "scripts": {
    "prebuild": "rimraf -rf dist",
    "build:copy-misc": "node ./scripts/copy-misc.js",
    "build": "tsc -p tsconfig.json && npm run build:copy-misc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "prerelease": "npm run prebuild && npm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@types/node": "18.7.23",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "release-it": "15.4.2",
    "rimraf": "3.0.2",
    "typescript": "4.8.4"
  },
  "homepage": "https://github.com/hemjs/types#readme",
  "bugs": {
    "url": "https://github.com/hemjs/types/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemjs/types.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
